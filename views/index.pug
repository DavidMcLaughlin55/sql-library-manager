extends layout

block content
  h1 Books
  p 
    a.button(href='/new-book') Create New Book

  table 
    thead 
      tr 
        th Title
        th Author
        th Genre
        th Year
    tbody
      each id in books
        tr
          td #{id.title} 
          td #{id.author}
          td #{id.genre}
          td #{id.year}